<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/colorgradient"
    tools:context=".GetData.getDataPh">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:id="@+id/layoutinicio"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/linearLayouttitleph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/layoutinicio"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Ph"
            android:id="@+id/txtph"
            android:textColor="#fff"
            android:textSize="30dp" />
        <TextView
            android:layout_width="10dp"
            android:layout_height="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:id="@+id/linearvalue"
        app:layout_constraintTop_toBottomOf="@id/linearLayouttitleph"
        tools:ignore="MissingConstraints">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="140dp"
            app:lottie_imageAssetsFolder="assets"
            app:lottie_fileName="liquid.json"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            android:layout_height="140dp"
            />

        <TextView
            android:layout_width="48dp"
            android:layout_height="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="60dp"
            android:hint="7.00"
            android:textColorHint="@color/colorPrimary"
            android:id="@+id/txtData"
            app:layout_constraintTop_toBottomOf="@id/txtph"
            android:gravity="center"
            android:textColor="#fff"
            android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="0.00mv"
                android:id="@+id/txtphvoltage"
                app:layout_constraintTop_toBottomOf="@id/txtData"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:textSize="22dp"
                android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="160dp"
            android:layout_height="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:text="Eficiencia"
                android:textSize="12dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:text="del"
                android:textSize="12dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:text="electrodo:"
                android:textSize="12dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/coloRojo"
                android:layout_gravity="center"
                android:text="95%"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backph"
        app:layout_constraintTop_toBottomOf="@id/linearvalue"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/scala"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="50dp"
                android:layout_marginTop="320dp"
                android:text="Escala de ph"
                android:textColor="#000"
                android:textSize="20dp" />

            <LinearLayout
                android:id="@+id/linearphcolor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/scala"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ph0" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ph1" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ph22" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ph3" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ph4" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ph5" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ph6" />

                <ImageView

                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ph7" />

                <ImageView

                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ph8" />

                <ImageView

                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ph9" />

                <ImageView

                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ph10" />

                <ImageView

                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ph11" />

                <ImageView

                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ph12" />

                <ImageView

                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ph13" />

                <ImageView

                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ph14" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearphflecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/fl0"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_flechaup" />

                <ImageView
                    android:id="@+id/fl1"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_flechaup" />

                <ImageView
                    android:id="@+id/fl2"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_flechaup" />

                <ImageView
                    android:id="@+id/fl3"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_flechaup" />

                <ImageView
                    android:id="@+id/fl4"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_flechaup" />

                <ImageView
                    android:id="@+id/fl5"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_flechaup" />

                <ImageView
                    android:id="@+id/fl6"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_flechaup" />

                <ImageView
                    android:id="@+id/fl7"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_flechaup" />

                <ImageView
                    android:id="@+id/fl8"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_flechaup" />

                <ImageView
                    android:id="@+id/fl9"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_flechaup" />

                <ImageView
                    android:id="@+id/fl10"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_flechaup" />

                <ImageView
                    android:id="@+id/fl11"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_flechaup" />

                <ImageView
                    android:id="@+id/fl12"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_flechaup" />

                <ImageView
                    android:id="@+id/fl13"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_flechaup" />

                <ImageView
                    android:id="@+id/fl14"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_flechaup" />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    >


                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/img_error"
                        android:layout_gravity="center"
                        android:src="@drawable/pherror" />


                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/img0"
                        android:layout_gravity="center"
                        android:src="@drawable/ph0" />

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/img1"
                        android:layout_gravity="center"
                        android:src="@drawable/ph1" />

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/img2"
                        android:layout_gravity="center"
                        android:src="@drawable/ph22" />

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/img3"
                        android:layout_gravity="center"
                        android:src="@drawable/ph3" />

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/img4"
                        android:layout_gravity="center"
                        android:src="@drawable/ph4" />
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:id="@+id/img5"
                        android:src="@drawable/ph5" />
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/img6"
                        android:layout_gravity="center"
                        android:src="@drawable/ph6" />

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/img7"
                        android:layout_gravity="center"
                        android:src="@drawable/ph7" />
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/img8"
                        android:layout_gravity="center"
                        android:src="@drawable/ph8" />
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/img9"
                        android:layout_gravity="center"
                        android:src="@drawable/ph9" />
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/img10"
                        android:layout_gravity="center"
                        android:src="@drawable/ph10" />
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/img11"
                        android:layout_gravity="center"
                        android:src="@drawable/ph11" />
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/img12"
                        android:layout_gravity="center"
                        android:src="@drawable/ph12" />
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/img13"
                        android:layout_gravity="center"
                        android:src="@drawable/ph13" />
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/img14"
                        android:layout_gravity="center"
                        android:src="@drawable/ph14" />

                </RelativeLayout>

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Ácido"
                    android:id="@+id/txtScala"
                    android:textSize="38dp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearestado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/relativetemp"
                tools:ignore="MissingConstraints">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estado del agua : "
                    android:textColor="#000"
                    android:textSize="16dp">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Excelente"
                    android:id="@+id/estado"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColorHint="@color/colorPrimary"
                    android:textColor="@color/design_default_color_primary_dark"
                    android:textSize="16dp">

                </TextView>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="50dp"
                        android:id="@+id/pezbien"
                        android:layout_height="50dp"
                        android:src="@drawable/pezbien" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/pezmal"
                        android:src="@drawable/pezmal"
                        android:visibility="invisible" />

                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

    <com.airbnb.lottie.LottieAnimationView
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:lottie_imageAssetsFolder="assets"
        app:lottie_fileName="shark.json"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        android:layout_height="70dp"
        android:layout_width="match_parent">


    </com.airbnb.lottie.LottieAnimationView>

    <TextView
        android:id="@+id/txtReciveSerie"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="20dp"
        android:visibility="invisible"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>